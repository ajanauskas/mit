extends ../base_layout

block content
  .span6
    != errorHelper(errors)
    h2 Login

    form(method='post', action='/users/login')
      label Login
      input(type="text", name='username', placeholder="Login")
      Label Password
      input(type="password", name='password', placeholder="Password")

      div
        input.btn.btn-primary(type="submit", value="Sign in")

